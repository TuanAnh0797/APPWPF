<Window
    x:Class="VsLoggerEngine.Views.LoggerOptionsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VsLoggerEngine.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:VsLoggerEngine.Models"
    Title="{Binding CallerAppName, StringFormat={}VS Logger Options - {0}}"
    MaxWidth="600"
    d:DataContext="{d:DesignInstance {x:Type models:VSLoggerSettingModel}}"
    Background="#F1F1F1"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox
            Padding="12"
            BorderBrush="{StaticResource MaterialDesignDarkBackground}"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock Style="{StaticResource MaterialDesignLabelMediumTextBlock}" Text="Display " />
            </GroupBox.Header>
            <CheckBox Content="Stay On Top" IsChecked="{Binding VSLoggerSetting.IsStayOnTop}" />
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Padding="12"
            BorderBrush="{StaticResource MaterialDesignDarkBackground}"
            Style="{x:Null}">
            <GroupBox.Header>
                <TextBlock Style="{StaticResource MaterialDesignLabelMediumTextBlock}" Text="Data " />
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="8" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignLabelMediumTextBlock}"
                    Text="Log Folder" />
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="8,8,32,8"
                    HorizontalAlignment="Stretch"
                    IsReadOnly="True"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    Text="{Binding VSLoggerSetting.LogFolderPath}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Padding="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderThickness="1,0,0,0"
                    Command="{Binding SetLogFolderPathCommand}"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <materialDesign:PackIcon
                        Width="24"
                        Height="24"
                        Foreground="Goldenrod"
                        Kind="FolderOpen" />
                </Button>

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignLabelMediumTextBlock}"
                    Text="Max Number Of Log Line" />
                <materialDesign:NumericUpDown
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="8,0,0,0"
                    Padding="8"
                    HorizontalAlignment="Stretch"
                    Minimum="1000"
                    Style="{StaticResource MaterialDesignOutlinedNumericUpDown}"
                    Value="{Binding VSLoggerSetting.MaxNumberOfLogLine}" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
