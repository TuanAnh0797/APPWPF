<Window
    x:Class="VsLoggerEngine.Views.MsgBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VsLoggerEngine.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title=""
    Height="Auto"
    MinWidth="320"
    MinHeight="160"
    MaxWidth="500"
    MaxHeight="500"
    Background="#F1F1F1"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Effect>
        <DropShadowEffect
            BlurRadius="20"
            Direction="270"
            Opacity="0.5"
            ShadowDepth="3"
            Color="Black" />
    </Window.Effect>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <materialDesign:PackIcon
            x:Name="msgIcon"
            Width="32"
            Height="32"
            Margin="8,8,0,0"
            VerticalAlignment="Center"
            Kind="Information" />

        <TextBlock
            x:Name="tbTitle"
            Grid.Row="0"
            Grid.Column="2"
            Margin="0,0,8,0"
            VerticalAlignment="Bottom"
            Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
            TextWrapping="Wrap" />

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="2"
            Margin="0,4,8,8"
            VerticalScrollBarVisibility="Auto">
            <TextBlock
                x:Name="tbMsg"
                Style="{StaticResource MaterialDesignBodyMediumTextBlock}"
                TextWrapping="Wrap" />
        </ScrollViewer>
        <DockPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Background="#E6E6E6"
            LastChildFill="False">
            <Button
                x:Name="btnCloseMessage"
                Height="30"
                MinWidth="80"
                Margin="0,8,8,8"
                Padding="4,0"
                HorizontalContentAlignment="Center"
                Background="#F1F1F1"
                Click="BtnCloseMessage_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}" />
            <Button
                x:Name="btnClose"
                Height="30"
                MinWidth="80"
                Margin="0,8,8,8"
                Padding="4,0"
                HorizontalContentAlignment="Center"
                Background="#F1F1F1"
                Click="BtnCancel_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}" />
            <Button
                x:Name="btnOk"
                Height="30"
                MinWidth="80"
                Margin="0,8,8,8"
                Padding="4,0"
                HorizontalContentAlignment="Center"
                Background="#F1F1F1"
                Click="BtnOk_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource MaterialDesignOutlinedDarkButton}" />
        </DockPanel>
    </Grid>
</Window>
