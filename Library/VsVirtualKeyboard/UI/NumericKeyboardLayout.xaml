<UserControl
    x:Class="VsVirtualKeyboard.UI.NumericKeyboardLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:VsVirtualKeyboard.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VsVirtualKeyboard.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="500"
    MinHeight="300"
    MaxWidth="500"
    MaxHeight="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <control:Key
            Grid.Row="0"
            Grid.Column="0"
            KeyCode="VcEscape" />

        <control:Key
            Grid.Row="0"
            Grid.Column="1"
            KeyCode="VcPeriod" />
        <control:Key
            Grid.Row="0"
            Grid.Column="2"
            KeyCode="VcMinus" />

        <control:Key
            Grid.Row="1"
            Grid.Column="0"
            KeyCode="VcNumPad1" />
        <control:Key
            Grid.Row="1"
            Grid.Column="1"
            KeyCode="VcNumPad2" />
        <control:Key
            Grid.Row="1"
            Grid.Column="2"
            KeyCode="VcNumPad3" />

        <control:Key
            Grid.Row="2"
            Grid.Column="0"
            KeyCode="VcNumPad4" />
        <control:Key
            Grid.Row="2"
            Grid.Column="1"
            KeyCode="VcNumPad5" />
        <control:Key
            Grid.Row="2"
            Grid.Column="2"
            KeyCode="VcNumPad6" />

        <control:Key
            Grid.Row="3"
            Grid.Column="0"
            KeyCode="VcNumPad7" />
        <control:Key
            Grid.Row="3"
            Grid.Column="1"
            KeyCode="VcNumPad8" />
        <control:Key
            Grid.Row="3"
            Grid.Column="2"
            KeyCode="VcNumPad9" />

        <control:Key
            Grid.Row="4"
            Grid.Column="0"
            KeyCode="VcNumPad0" />

        <control:Key
            Grid.Row="4"
            Grid.Column="1"
            KeyCode="VcLeft" />
        <control:Key
            Grid.Row="4"
            Grid.Column="2"
            KeyCode="VcRight" />

        <control:Key
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            KeyCode="VcBackspace" />

        <control:Key
            Grid.Row="2"
            Grid.RowSpan="3"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            KeyCode="VcEnter" />
    </Grid>
</UserControl>
