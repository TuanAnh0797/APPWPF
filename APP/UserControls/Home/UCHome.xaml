<UserControl x:Class="APP.UserControls.UCHome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:APP.UserControls"
             xmlns:children="clr-namespace:APP.UserControls.Home.ChildrenUC"
             mc:Ignorable="d" 
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Border Background="White" Margin="10,0,10,10" CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="4" 
           BlurRadius="10" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="4" 
           BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <TabControl>
                    <TabControl.Resources>
                        <!--Style cho icon-->
                        <Style TargetType="materialDesign:PackIcon">
                            <Setter Property="Height" Value="30"/>
                            <Setter Property="Width" Value="30"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                        <!--Style cho Label-->
                        <Style TargetType="Label">
                            <Setter Property="FontSize" Value="15"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Margin" Value="5,0,0,0"/>
                        </Style>
                        <Style TargetType="TabItem">
                            <Setter Property="Height" Value="50"/>

                        </Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Orientation" Value="Horizontal"/>
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </TabControl.Resources>
                    <TabItem Width="auto" Height="50" >
                        <TabItem.Header>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="DeveloperBoard" Foreground="DarkBlue"/>
                                <Label Content="Manage"/>
                            </StackPanel>
                        </TabItem.Header>

                        <children:UCManage></children:UCManage>
                    </TabItem>

                    <TabItem Width="auto" Height="50">
                        <TabItem.Header>
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="BookEdit" Foreground="Red"/>
                                    <Label Content="Report"/>
                                </StackPanel>
                        </TabItem.Header>
                        <children:UCReport></children:UCReport>
                    </TabItem>
                    <TabItem Width="auto" Height="50">
                        <TabItem.Header>
                            <StackPanel >
                                <materialDesign:PackIcon Kind="History" Foreground="SlateBlue"/>
                                <Label Content="History"/>
                            </StackPanel>
                        </TabItem.Header>

                        <children:UCHistory></children:UCHistory>
                    </TabItem>
                    <TabItem Width="auto" Height="50">
                        <TabItem.Header>
                            <StackPanel>
                                <materialDesign:PackIcon Kind="FridgeOutline" Foreground="Chocolate"/>
                                <Label Content="Progress"/>
                            </StackPanel>
                        </TabItem.Header>
                        <children:UCProgress></children:UCProgress>
                    </TabItem>
                </TabControl>
            </Border>
            
        </Grid>
    </Border>
    
   
</UserControl>
